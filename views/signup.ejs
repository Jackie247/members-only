<!DOCTYPE html>
<html>
  <head>
    <title>Sign Up</title>
    <link rel="stylesheet" href="/stylesheets/style.css" />
  </head>
  <body>
    <main>
      <div class="sign-up-title">
        <h1 class="mid-page center">Sign up for free</h1>
        <div class="flex mid-page center">
          <p>Or <a href="/users/login"> sign in to your existing account</a></p>
        </div>
      </div>

      <div class="form-container">
        <form class="form" action="/users/signup" method="POST">
          <div class="form-field">
            <label>Username</label>
            <input id="username" name="username" required />
            <% if (errors && errors.length > 0) { %>
            <div class="error-message">
              <% errors.forEach(err => { %> <% if (err.path === 'username') { %>
              <p><%= err.msg %></p>
              <% } %> <% }); %>
            </div>
            <% } %>
          </div>
          <div class="form-field">
            <label>Email</label>
            <input id="email" name="email" required />
            <% if (errors && errors.length > 0) { %>
            <div class="error-message">
              <% errors.forEach(err => { %> <% if (err.path === 'email') { %>
              <p><%= err.msg %></p>
              <% } %> <% }); %>
            </div>
            <% } %>
          </div>
          <div class="form-field">
            <label>Password</label>
            <input
              id="password"
              name="password"
              type="password"
              minlength="6"
              required
            />
            <% if (errors && errors.length > 0) { %>
            <div class="error-message">
              <% errors.forEach(err => { %> <% if (err.path === 'password') { %>
              <p><%= err.msg %></p>
              <% } %> <% }); %>
            </div>
            <% } %>
          </div>
          <div class="form-field">
            <label>Confirm Password</label>
            <input
              id="confirmPassword"
              name="confirmPassword"
              type="password"
              minlength="6"
              required
            />
            <% if (errors && errors.length > 0) { %>
            <div class="error-message">
              <% errors.forEach(err => { %> <% if (err.path ===
              'confirmPassword') { %>
              <p><%= err.msg %></p>
              <% } %> <% }); %>
            </div>
            <% } %>
          </div>

          <div class="form-bottom">
            <span class="center"
              >By signing up, you agree to our terms of use.</span
            >
            <button type="submit">Sign Up</button>
          </div>
        </form>
      </div>
    </main>
  </body>
</html>
