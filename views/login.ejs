<!DOCTYPE html>
<html>
  <head>
    <title>Login</title>
    <link rel="stylesheet" href="/stylesheets/forms.css" />
    <link rel="stylesheet" href="/stylesheets/style.css" />
  </head>
  <body>
    <main>
      <div class="sign-up-title">
        <h1 class="mid-page center">Sign in to your account</h1>
        <div class="flex mid-page center">
          <p>Or <a href="/users/signup"> sign up for a new account</a></p>
        </div>
      </div>

      <div class="form-container">
        <form class="form" action="/users/login" method="POST">
          <div class="form-field">
            <label>Email address</label>
            <input id="email" name="email" required />
            <% if (errors && errors.length > 0) { %>
            <div class="error-message">
              <% errors.forEach(err => { %> <% if (err.path === 'email') { %>
              <p><%= err.msg %></p>
              <% } %> <% }); %>
            </div>
            <% } %>
          </div>
          <div class="form-field">
            <label>Password</label>
            <input
              id="password"
              name="password"
              type="password"
              minlength="6"
              required
            />
            <% if (errors && errors.length > 0) { %>
            <div class="error-message">
              <% errors.forEach(err => { %> <% if (err.path === 'password') { %>
              <p><%= err.msg %></p>
              <% } %> <% }); %>
            </div>
            <% } %>
          </div>
          <div class="form-bottom">
            <button type="submit">Log In</button>
          </div>
        </form>
      </div>
    </main>
  </body>
</html>
